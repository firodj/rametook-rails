<td class="offset" id="<%= singular_name %>_offset_<%%= @<%= singular_name %>.id %>"><%%=h offset %></td>
<% model_instance.class.content_columns.each do |column| -%>
<td><%%=h @<%= singular_name %>.<%= column.name %> %></td>
<% end -%>
<% model_instance.class.reflect_on_all_associations(:belongs_to).each do |belongs_to| -%>
<td><%%=h @<%= singular_name %>.<%= belongs_to.name %>.display_name rescue '' %></td>
<% end -%>
<td class="offset_right">
<%%= link_to_remote(image_tag("/images/icon-show.png"), 
  { :url => <%= singular_name %>_url(@<%= singular_name %>), :method => :get }, 
  :title => print_words('show').capitalize) %>
<%%= link_to_remote(image_tag("/images/icon-detail.gif"), 
  { :url => edit_<%= singular_name %>_url(@<%= singular_name %>), :method => :get }, # :page => params[:page]
  :title => print_words('edit').capitalize) if granted_to(:update, @<%= singular_name %>)
%>
<%%= link_to_remote(image_tag("/images/icon-delete.gif"), 
  { :url => <%= singular_name %>_url(@<%= singular_name %>), :method => :delete,
  :confirm => print_words('are you sure').capitalize }, 
  :title => print_words('delete').capitalize) if granted_to(:destroy, @<%= singular_name %>) 
%>
</td>
