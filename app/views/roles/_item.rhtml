<td class="offset" id="role_offset_<%= @role.id %>"><%=h offset %></td>
<td><%= @role.title %></td>
<td><%= @role.description %></td>
<td class="offset_right">
  <%= link_to_remote image_tag("/images/icon-show.png"), { :url => {:action => 'show', :id => @role.id} }, :title => print_words('show').capitalize %>
  <%= link_to_remote(image_tag("/images/icon-detail.gif"), { :url => {:action => 'edit', :id => @role.id, :page => params[:page]} }, :title => print_words('edit').capitalize) if granted_to(:update, @role) %>
  <%= link_to_remote(image_tag("/images/icon-delete.gif"), { :url => { :action => 'destroy', :id => @role.id }, :confirm => print_words('are you sure').capitalize , :method => :delete }, :title => print_words('delete').capitalize) if granted_to(:delete, @role) %>
</td>
