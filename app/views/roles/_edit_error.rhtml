<h1 id="title">
	<%= image_tag("/images/icon_role.png", :style => "float:none;") %> 
	<%=h print_words('edit').capitalize_words %> <%=h print_words('role').capitalize_words %>
</h1>
<div id="edit_form" style="padding:10px; border:1px solid #ddd;">
<% form_for :role , :url => {:action => 'edit'}, :html => { :multipart => false } do |f| -%>
  <div style="float:right;">
  <%= link_to image_tag('icon_close.png')+' '+print_words('cancel').capitalize_words, :action => 'list', :page => params[:page] %>
  </div>
	<%= error_messages_for 'role' %> 
  	<%= render :partial => 'form', :locals => {:f => f} %>
  	<%= submit_tag print_words('edit').capitalize %>
<% end %>
</div>
