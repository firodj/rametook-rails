<td class="offset" id="sms_template_offset_<%= @sms_template.id %>"><%=h offset %></td>
<td><%= @sms_template.name %></td>
<td><%= @sms_template.template %></td>
<td class="offset_right">
  <%= link_to_remote image_tag("/images/icon-show.png"), { :url => {:action => 'show', :id => @sms_template.id} }, :title => print_words('show').capitalize %>
  <%= link_to_remote(image_tag("/images/icon-detail.gif"), { :url => {:action => 'edit', :id => @sms_template.id, :page => params[:page]} }, :title => print_words('edit').capitalize) if granted_to(:update, @sms_template) %>
  <%= link_to_remote(image_tag("/images/icon-delete.gif"), { :url => { :action => 'destroy', :id => @sms_template.id }, :confirm => print_words('are you sure').capitalize , :method => :delete }, :title => print_words('delete').capitalize) if granted_to(:delete, @sms_template) %>
</td>
