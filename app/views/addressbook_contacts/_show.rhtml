if addressbook_contact_groups.empty? %>
-
<% else 
  for addressbook_group in addressbook_contact_groups -%>
  <%= addressbook_group.display_name.capitalize_words %><br />
  <% end -%>
<% end %>
</span>
</p>
-->
<% end %>

<% if false %>
<!--
<p>
<label><%= print_words('user').capitalize_words %></label><span class="showvalue"><%= @addressbook_contact.user.display_name rescue '' %></span>
</p>
-->
<% end %>

</td>
<td valign="top" align="center">
<%= print_words('close').capitalize_words %> <%= link_to_remote image_tag('icon_close.png'), :url => {:action => 'close', :id => @addressbook_contact.id} %> 
</td>
