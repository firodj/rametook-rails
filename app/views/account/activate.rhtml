<%
	# app/views/account/activate.rhtml
	# Account Activation Page
-%>

<h1><%=h print_words('activate').capitalize %></h1>

<% form_tag :action => "activate" do %>
<p><label for="activation_code"><%=h print_words('activation code').capitalize %></label>
<%= text_field_tag(:activation_code, @params[:activation_code], :size=>50 ) %>
</p>
<%= submit_tag print_words('activate').capitalize %>
<% end %>
